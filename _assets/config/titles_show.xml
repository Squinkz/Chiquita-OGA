<theme defaultView="video">
	<formatVersion>7</formatVersion>
	
	<view name="grid">
		
		<text name="gridtile">
			<forceUppercase>1</forceUppercase>
			<fontPath>./../Roboto-Medium.ttf</fontPath>
			<color>dee0e8ff</color>
			<backgroundColor>ffffff00</backgroundColor>
			<fontSize>0.025</fontSize>
			<alignment>center</alignment>
			<size>1 0.24</size>
			<singleLineScroll>false</singleLineScroll>
			<glowColor>24283120</glowColor>
			<glowSize>1</glowSize>
		</text>
		
		<text name="gridtile:selected">
			<color>${baseColor}</color>
			<glowColor>00000000</glowColor>
			<glowSize>2</glowSize>
		</text>
		
	</view>
	
	<!-- Tile View -->
	<customView name="Tiles" inherits="grid">
		
		<text name="gridtile">
			<forceUppercase>1</forceUppercase>
			<fontPath>./../Roboto-Medium.ttf</fontPath>
			<color>dee0e8ff</color>
			<backgroundColor>ffffff00</backgroundColor>
			<fontSize>0.025</fontSize>
			<alignment>center</alignment>
			<size>1 0.24</size>
			<singleLineScroll>false</singleLineScroll>
			<glowColor>24283180</glowColor>
			<glowSize>1</glowSize>
			<size>0 0.25</size>
			<padding>0 0</padding>
		</text>
		
		<text name="gridtile:selected">
			<color>ffffffff</color>
			<glowColor>${gradientEndColor}</glowColor>
			<glowSize>2</glowSize>
		</text>
		
	</customView>
	
</theme>