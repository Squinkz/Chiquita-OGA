<theme>
	<formatVersion>7</formatVersion>
	
	<feature supported="carousel">
	
		<view name="system">
		
			<image name="background" extra="true">
				<tile>false</tile>
				<path>./_assets/system_bg.png</path>
				<size>1 1</size>
				<pos>0 0</pos>
			</image>
			
			<text name="shortdescription">
				<fontPath>./_assets/Roboto-Medium.ttf</fontPath>
				<alignment>center</alignment>
				<forceUppercase>1</forceUppercase>
				<fontSize>0.03</fontSize>
				<color>818181</color>
				<origin>0 0</origin>
				<pos>1 1</pos>
				<size>0.32 0.1</size>
			</text>
			
			<image name="logo">
				<path>./_assets/logos/${system.theme}.svg</path>
				<color>${baseColor}</color>
			</image>
			
			<carousel name="systemcarousel">
				<type>vertical_wheel</type>
				<color>00000000</color>
				<origin>0.5 0.5</origin>
				<pos>0.198 0.25</pos>
				<size>1 0.16</size>
				<logoScale>0.85</logoScale>
				<logoSize>0.32 0.20</logoSize>
				<logoRotationOrigin>100 0.5</logoRotationOrigin>
				<logoRotation>0.5</logoRotation>
				<maxLogoCount>2</maxLogoCount>
			</carousel>
			
			<text name="systemInfo">
				<fontPath>./_assets/Roboto-Medium.ttf</fontPath>
				<alignment>center</alignment>
				<backgroundColor>00000000</backgroundColor>
				<color>${baseColor}</color>
				<origin>0.5 0.5</origin>
				<pos>0.198 0.85</pos>
				<size>0.980 0.050</size>
				<fontSize>0.025</fontSize>
			</text>
			
			<text name="longdescription" extra="true">>
				<fontPath>./_assets/Roboto-Medium.ttf</fontPath>
				<alignment>center</alignment>
				<forceUppercase>0</forceUppercase>
				<fontSize>0.023</fontSize>
				<color>404040</color>
				<origin>0.5 0.0</origin>
				<pos>0.198 0.38</pos>
				<size>0.3 0</size>
			</text>
			
			<image name="character" extra="true">
				<path>./_assets/characters/${system.theme}.jpg</path>
				<tile>false</tile>
				<origin>0 0</origin>
				<pos>0.395 0.0117</pos>
				<size>0.604 0.976</size>
			</image>
		
			
			<image name="blur" extra="true">
				<path>./_assets/blur.png</path>
				<tile>false</tile>
				<origin>0 0</origin>
				<pos>0.395 0.0117</pos>
				<size>0.604 0.976</size>
			</image>
			
			<image name="controller" extra="true">
				<path>./_assets/controllers/${system.theme}.png</path>
				<tile>false</tile>
				<origin>1 1</origin>
				<pos>0.9785 0.975</pos>
				<maxSize>0.275 0.4</maxSize>
			</image>
			
			<helpsystem name="help">
				<fontPath>./_assets/Roboto-Medium.ttf</fontPath>
				<fontSize>0.021</fontSize>
				<pos>0.054 0.975</pos>
				<textColor>818181</textColor>
				<iconColor>818181</iconColor>
			</helpsystem>
			
		</view>
	</feature>
	
</theme>